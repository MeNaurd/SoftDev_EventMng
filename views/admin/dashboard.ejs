<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .quick-actions .btn {
            margin-bottom: 0.5rem;
            width: 100%;
        }
        .activity-feed {
            max-height: 300px;
            overflow-y: auto;
        }
        .activity-item {
            padding: 0.5rem 0;
            border-bottom: 1px solid #eee;
        }
        .activity-item:last-child {
            border-bottom: none;
        }
        .system-health .card {
            border-left: 4px solid;
        }
        .system-health .card.healthy {
            border-left-color: #28a745;
        }
        .system-health .card.warning {
            border-left-color: #ffc107;
        }
        .system-health .card.danger {
            border-left-color: #dc3545;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-8">
                <h2>Admin Dashboard</h2>
                <p class="text-muted">Welcome to the admin control panel. Here you can manage all aspects of the platform.</p>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Quick search..." id="quickSearch">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>

        <% if (error_msg != '') { %>
            <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>
        <% if (success_msg != '') { %>
            <div class="alert alert-success"><%= success_msg %></div>
        <% } %>

        <!-- System Health -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-heartbeat text-danger"></i>
                            System Health
                        </h5>
                        <div class="row system-health">
                            <div class="col-md-3">
                                <div class="card healthy">
                                    <div class="card-body">
                                        <h6>Server Status</h6>
                                        <p class="mb-0">Healthy</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card healthy">
                                    <div class="card-body">
                                        <h6>Database</h6>
                                        <p class="mb-0">Connected</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card warning">
                                    <div class="card-body">
                                        <h6>Storage</h6>
                                        <p class="mb-0">75% Used</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card healthy">
                                    <div class="card-body">
                                        <h6>Last Backup</h6>
                                        <p class="mb-0">2 hours ago</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Host Applications Card -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-user-plus text-primary"></i>
                            Host Applications
                        </h5>
                        <p class="card-text">
                            <span class="badge bg-warning"><%= pendingHostRequests %> Pending</span>
                            <span class="badge bg-success"><%= approvedHostRequests %> Approved</span>
                            <span class="badge bg-danger"><%= rejectedHostRequests %> Rejected</span>
                        </p>
                        <a href="/admin/host-applications" class="btn btn-primary">
                            <i class="fas fa-eye"></i> Review Applications
                        </a>
                    </div>
                </div>
            </div>

            <!-- User Management Card -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-users text-success"></i>
                            User Management
                        </h5>
                        <p class="card-text">
                            <span class="badge bg-primary"><%= totalUsers %> Total Users</span>
                            <span class="badge bg-info"><%= hostUsers %> Hosts</span>
                        </p>
                        <a href="/admin/users" class="btn btn-success">
                            <i class="fas fa-cog"></i> Manage Users
                        </a>
                    </div>
                </div>
            </div>

            <!-- Event Management Card -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-calendar-alt text-danger"></i>
                            Event Management
                        </h5>
                        <p class="card-text">
                            <span class="badge bg-primary"><%= totalEvents %> Total Events</span>
                            <span class="badge bg-info"><%= upcomingEvents %> Upcoming</span>
                        </p>
                        <a href="/admin/events" class="btn btn-danger">
                            <i class="fas fa-cog"></i> Manage Events
                        </a>
                    </div>
                </div>
            </div>

            <!-- System Statistics Card -->
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-chart-bar text-info"></i>
                            System Statistics
                        </h5>
                        <p class="card-text">
                            <span class="badge bg-primary"><%= totalRegistrations %> Total Registrations</span>
                            <span class="badge bg-success"><%= activeEvents %> Active Events</span>
                        </p>
                        <a href="/admin/statistics" class="btn btn-info">
                            <i class="fas fa-chart-line"></i> View Statistics
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity Feed -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-history text-primary"></i>
                            Recent Activity
                        </h5>
                        <div class="activity-feed">
                            <div class="activity-item">
                                <small class="text-muted">2 minutes ago</small>
                                <p class="mb-0">New user registration: John Doe</p>
                            </div>
                            <div class="activity-item">
                                <small class="text-muted">15 minutes ago</small>
                                <p class="mb-0">Event "Tech Conference 2024" created</p>
                            </div>
                            <div class="activity-item">
                                <small class="text-muted">1 hour ago</small>
                                <p class="mb-0">Host application approved: Jane Smith</p>
                            </div>
                            <div class="activity-item">
                                <small class="text-muted">2 hours ago</small>
                                <p class="mb-0">System backup completed</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Quick search functionality
        document.getElementById('quickSearch').addEventListener('keyup', function(e) {
            if (e.key === 'Enter') {
                const searchTerm = this.value.trim();
                if (searchTerm) {
                    window.location.href = `/admin/search?q=${encodeURIComponent(searchTerm)}`;
                }
            }
        });
    </script>
</body>
</html> 