<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - <%= user.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="<%= user.profilePicture %>" alt="Profile Picture" class="rounded-circle img-fluid mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                        <h3><%= user.name %></h3>
                        <p class="text-muted"><%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></p>
                        <% if (user.bio) { %>
                            <p class="mb-3"><%= user.bio %></p>
                        <% } %>
                        <a href="/profile/edit" class="btn btn-primary">Edit Profile</a>
                    </div>
                </div>

                <% if (user.socialLinks && (user.socialLinks.twitter || user.socialLinks.linkedin || user.socialLinks.facebook)) { %>
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5 class="card-title">Social Links</h5>
                            <div class="d-flex justify-content-center gap-3">
                                <% if (user.socialLinks.twitter) { %>
                                    <a href="<%= user.socialLinks.twitter %>" target="_blank" class="text-dark"><i class="fab fa-twitter fa-lg"></i></a>
                                <% } %>
                                <% if (user.socialLinks.linkedin) { %>
                                    <a href="<%= user.socialLinks.linkedin %>" target="_blank" class="text-dark"><i class="fab fa-linkedin fa-lg"></i></a>
                                <% } %>
                                <% if (user.socialLinks.facebook) { %>
                                    <a href="<%= user.socialLinks.facebook %>" target="_blank" class="text-dark"><i class="fab fa-facebook fa-lg"></i></a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Contact Information</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Email:</strong> <%= user.email %></p>
                                <% if (user.phone) { %>
                                    <p><strong>Phone:</strong> <%= user.phone %></p>
                                <% } %>
                            </div>
                            <div class="col-md-6">
                                <% if (user.location) { %>
                                    <p><strong>Location:</strong> <%= user.location %></p>
                                <% } %>
                                <% if (user.website) { %>
                                    <p><strong>Website:</strong> <a href="<%= user.website %>" target="_blank"><%= user.website %></a></p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <% if (user.role === 'host' || user.role === 'admin') { %>
                    <div class="card mt-3">
                        <div class="card-body">
                            <h4 class="card-title">Hosted Events</h4>
                            <p class="text-muted">You can manage your events from the events page.</p>
                            <a href="/events" class="btn btn-outline-primary">View Events</a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 